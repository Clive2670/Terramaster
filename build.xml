     Terramaster    
     Tool to manage Flightgear scenery
                                                                                   
     ====================================================================== -->
<project name="Terramaster" default="default">
	<description>
            Tool to manage Flightgear scenery
    </description>

	<!-- ================================= 
          target: default              
         ================================= -->
	<target name="default" depends="compile,jar" description="Tool to manage Flightgear scenery">

	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: depends                      
         - - - - - - - - - - - - - - - - - -->
	<target name="compile">
		<javac debug="true" includeantruntime="false" srcdir="." optimize="false" verbose="false" destdir="bin">
			<classpath>
				<fileset dir="LIB">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: jar                      
         - - - - - - - - - - - - - - - - - -->
	<target name="jar">
		<jar destfile="terramaster.jar" manifest="manifest">
			<fileset dir="bin">
				<include name="**/*" />
			</fileset>
			<fileset dir="LIB">
				<include name="*.jar" />
			</fileset>

		</jar>
	</target>

</project>
